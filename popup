        <!-- <script src="main.js"></script> -->
       <script> function runPopup(){
            var respond = prompt("Masukkan Nama Anda: ");
            if(respond = "")
            {
            window.alert("Hai, " + respond + "!");
            }
            else
            {
            window.alert("Pengguna Tidak Memasukkan Kalimat Apapun");
            }
            };
           
        </script>
